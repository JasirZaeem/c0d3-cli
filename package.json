{
  "name": "c0d3",
  "version": "2.0.0",
  "description": "Command Line Interface (CLI) for c0d3.com",
  "license": "MIT",
  "homepage": "https://c0d3.com",
  "repository": "https://github.com/garageScript/c0d3-app/cli",
  "engines": {
    "node": ">=8"
  },
  "keywords": [
    "c0d3",
    "education"
  ],
  "preferGlobal": true,
  "bin": {
    "c0d3": "./dist/src/cli.js"
  },
  "scripts": {
    "dev": "ts-node src/cli.ts",
    "build": "tsc -p . && chmod +x ./dist/src/cli.js",
    "test": "jest --coverage --silent"
  },
  "author": "c0d3.com",
  "dependencies": {
    "boxen": "^4.2.0",
    "chalk": "^4.0.0",
    "commander": "^5.1.0",
    "enquirer": "^2.3.5",
    "graphql-request": "^1.6.0",
    "ora": "^4.0.4",
    "simple-git": "^2.4.0",
    "update-notifier": "^4.1.0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.9.0",
    "@types/node": "^14.0.1",
    "@types/update-notifier": "^4.1.0",
    "jest": "^26.0.1",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.3"
  },
  "main": "./dist/src/cli.js",
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts*"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "modulePathIgnorePatterns": [
      "./dist", "./src/@types"
    ]
  }
}
